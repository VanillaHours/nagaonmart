<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".verificationpg">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logot1"
        android:transitionName="logoimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Forgot Password?"
        android:textSize="28dp"
        android:transitionName="txt1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antic"
        android:layout_marginTop="10dp"
        android:text="Enter your account's Email for which you want to reset your password."
        android:textSize="14dp"
        android:transitionName="txt2"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Email Address"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/antic" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_marginBottom="50dp"
        android:background="#3282B8"
        android:fontFamily="@font/antic"
        android:textSize="12dp"
        android:text="Reset Password"
        android:textColor="#fff"
        android:transitionName="btn1" />


</LinearLayout>